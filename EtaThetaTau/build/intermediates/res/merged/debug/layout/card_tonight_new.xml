<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/ct_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/ct_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_aspectRatio="178%">

            <ImageView
                android:id="@+id/ct_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/ct_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/ct_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ct_image_layout"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="12dp"
            tools:text="Don't forget to bring your money tomorrow for the thing that is happening. It will be great."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_below="@id/ct_description"
            android:orientation="horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/ct_first_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="RJ A."/>

            <Button
                android:id="@+id/ct_second_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Kayleigh T."/>

            <Button
                android:id="@+id/ct_third_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Alanna A."/>

        </LinearLayout>

    </android.support.percent.PercentRelativeLayout>

</android.support.v7.widget.CardView>