<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    android:layout_margin="8dp">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lvh_top_title_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            tools:text="TONIGHT"
            style="@style/Card.TitleText"/>

        <TextView
            android:id="@+id/lvh_date_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/lvh_top_title_text"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            tools:text="2/28/15"
            style="@style/Card.SubtitleText"/>

        <!--suppress AndroidDomInspection -->
        <android.support.v7.widget.CardView
            android:id="@+id/lvh_link_card_layout"
            app:layout_widthPercent="100%"
            app:layout_aspectRatio="200%"
            android:layout_below="@+id/lvh_top_title_text"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardElevation="2dp"
            app:cardCornerRadius="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/lvh_link_image"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    tools:background="@color/light_grey"/>

                <View
                    android:id="@+id/lvh_link_label_background"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/lvh_link_text"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    tools:text="The Link Title"
                    style="@style/Card.SubtitleText"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/lvh_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lvh_link_card_layout"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:text="Hey Hotties, you guys are the best. We are going to have a great practice tonight!"
            style="@style/Card.DescriptionText"/>

    </android.support.percent.PercentRelativeLayout>

</android.support.v7.widget.CardView>