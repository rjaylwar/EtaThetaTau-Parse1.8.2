<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <EditText
        android:id="@+id/fap_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/fap_search_button"
        android:imeOptions="actionSearch"
        android:textColor="@color/black"
        android:hint="@string/search_for_artist"
        android:drawableStart="@drawable/ic_search_24dp"/>

    <Button
        android:id="@+id/fap_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Find"/>

    <ImageView
        android:id="@+id/fap_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/fap_search"/>

    <TextView
        android:id="@+id/fap_title"
        android:layout_below="@+id/fap_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Title"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/fap_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fap_title"
        tools:text="Subtitle"
        android:textColor="@color/grey"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_below="@id/fap_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/fap_rewind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RR"/>

        <Button
            android:id="@+id/fap_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play_icon"/>

        <Button
            android:id="@+id/fap_fast_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FF"/>

    </LinearLayout>

</RelativeLayout>