<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pvh_top_title_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            tools:text="HOTD"
            style="@style/Card.TitleText"/>

        <TextView
            android:id="@+id/pvh_date_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/pvh_top_title_text"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            tools:text="2/28/15"
            style="@style/Card.SubtitleText"/>

        <!--suppress AndroidDomInspection -->

        <ImageView
            android:id="@+id/pvh_image"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/pvh_top_title_text"
            android:minHeight="160dp"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            tools:background="@color/light_grey"/>

        <TextView
            android:id="@+id/pvh_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pvh_image"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:text="Hey Hotties, you guys are the best. We are going to have a great practice tonight!"
            style="@style/Card.DescriptionText"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>