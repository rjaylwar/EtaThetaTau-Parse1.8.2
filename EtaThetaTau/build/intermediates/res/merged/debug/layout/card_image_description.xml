<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="2dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cid_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/cid_date"
            android:layout_margin="12dp"
            android:textStyle="bold"
            tools:text="HTOD"/>

        <TextView
            android:id="@+id/cid_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="12dp"
            android:textStyle="bold"
            tools:text="2/28/15"/>

        <ImageView
            android:id="@+id/cid_image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_below="@+id/cid_title"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/cid_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cid_image"
            android:layout_margin="12dp"
            tools:text="HOTTIE OF THE DAY was Alanna, our amazing producer!!!"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>