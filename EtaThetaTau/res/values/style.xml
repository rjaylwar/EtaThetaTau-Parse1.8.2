<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/hot_light_background_blue</item>
        <item name="colorPrimaryDark">@color/hot_dark_background_blue</item>
        <item name="colorAccent">@color/hot_green_blue</item>

        <!-- Trim color for UI elements like checkboxes -->
        <item name="android:textColorSecondary">@color/light_grey</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="Theme.Main" parent="AppTheme">
        <item name="android:alertDialogStyle">@style/Theme.AppCompat.Dialog.Alert</item>
        <item name="android:textColor">@color/very_light_grey</item>
    </style>

    <style name="Theme.Main.TransparentStatus" parent="Theme.Main"/>

    <style name="Widget.UM.TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="Widget.UM.TextAppearance.Dark" parent="@android:style/TextAppearance">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="TealButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/green_button</item>
    </style>

    <style name="Card.MessageText" parent="@android:style/TextAppearance">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Card.TitleText" parent="@android:style/TextAppearance">
        <item name="android:textSize">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Card.SubtitleText" parent="@android:style/TextAppearance">
        <item name="android:textSize">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Card.DescriptionText" parent="@android:style/TextAppearance">
        <item name="android:textSize">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Card.BottomText" parent="@android:style/TextAppearance">
        <item name="android:textSize">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Card.LightTitleText" parent="@android:style/TextAppearance">
        <item name="android:textSize">24dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Card.HeaderTitleText" parent="@android:style/TextAppearance">
        <item name="android:textSize">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/um_highlight_blue</item>
    </style>

</resources>