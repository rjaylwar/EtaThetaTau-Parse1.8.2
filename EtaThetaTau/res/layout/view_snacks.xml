<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/um_grey_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TextView
            android:id="@+id/vs_left_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="@string/salty"
            style="@style/View.SnacksTitle"/>

        <TextView
            android:id="@+id/vs_center_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="@string/sweet"
            style="@style/View.SnacksTitle"/>

        <TextView
            android:id="@+id/vs_right_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="@string/drinks"
            style="@style/View.SnacksTitle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/vs_left_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Alanna A."
            style="@style/View.SnacksSubtitle"/>

        <TextView
            android:id="@+id/vs_center_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Kayleigh T."
            style="@style/View.SnacksSubtitle"/>

        <TextView
            android:id="@+id/vs_right_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="RJ A."
            style="@style/View.SnacksSubtitle"/>

    </LinearLayout>

</LinearLayout>