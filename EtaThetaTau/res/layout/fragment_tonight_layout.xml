<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bit="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <include layout="@layout/toolbar_image"/>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/ft_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/appbar"
        android:layout_gravity="fill_vertical"
        bit:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.rja.etaThetaTau.views.ThreeByTwoTextView
                android:id="@+id/ft_snacks_3x2_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"/>

            <TextView
                android:id="@+id/ft_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Card.HeaderTitleText"
                tools:text="Title"/>

            <include layout="@layout/breakline"/>

            <TextView
                android:id="@+id/ft_message_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/Card.DescriptionText"
                tools:text="Don't forget to bring your money for the thing and the other thing but this is a thing"/>

            <TextView
                android:id="@+id/ft_reminder_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Card.HeaderTitleText"
                tools:text="Title"/>

            <include layout="@layout/breakline"/>

            <TextView
                android:id="@+id/ft_reminder_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/Card.DescriptionText"
                tools:text="Don't forget to bring your money for the thing and the other thing but this is a thing"/>

            <TextView
                android:id="@+id/ft_theme_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Card.HeaderTitleText"
                tools:text="Title"/>

            <include layout="@layout/breakline"/>

            <TextView
                android:id="@+id/ft_theme_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/Card.DescriptionText"
                tools:text="Don't forget to bring your money for the thing and the other thing but this is a thing"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ft_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"/>

            <TextView
                android:id="@+id/ft_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Card.HeaderTitleText"
                tools:text="Title"/>

            <include layout="@layout/breakline"/>

            <TextView
                android:id="@+id/ft_location_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/Card.DescriptionText"
                tools:text="Don't forget to bring your money for the thing and the other thing but this is a thing"/>

            <com.google.android.gms.maps.MapView
                android:layout_marginTop="16dp"
                android:id="@+id/ft_map"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>