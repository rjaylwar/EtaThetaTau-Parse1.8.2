<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/ft_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/toolbar_image"/>

            <TextView
                android:id="@+id/ft_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="@style/Card.HeaderTitleText"
                tools:text="Title"/>

            <include layout="@layout/breakline"/>

            <TextView
                android:id="@+id/ft_message_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/Card.DescriptionText"
                tools:text="Don't forget to bring your money for the thing and the other thing but this is a thing"/>

            <TextView
                android:id="@+id/ft_reminder_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="@style/Card.HeaderTitleText"
                tools:text="Title"/>

            <include layout="@layout/breakline"/>

            <TextView
                android:id="@+id/ft_reminder_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/Card.DescriptionText"
                tools:text="Don't forget to bring your money for the thing and the other thing but this is a thing"/>

            <TextView
                android:id="@+id/ft_theme_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="@style/Card.HeaderTitleText"
                tools:text="Title"/>

            <include layout="@layout/breakline"/>

            <TextView
                android:id="@+id/ft_theme_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/Card.DescriptionText"
                tools:text="Don't forget to bring your money for the thing and the other thing but this is a thing"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ft_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"/>

            <TextView
                android:id="@+id/ft_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="@style/Card.HeaderTitleText"
                tools:text="Title"/>

            <include layout="@layout/breakline"/>

            <TextView
                android:id="@+id/ft_location_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/Card.DescriptionText"
                tools:text="Don't forget to bring your money for the thing and the other thing but this is a thing"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>